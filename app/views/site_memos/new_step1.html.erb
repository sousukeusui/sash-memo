<p>メモ追加</p>
<%= form_with url: site_memos_new_step2_path, method: :get, local: true  do |f|%>
  <div class="form-group">
    <%= f.label :construction_kind_id, '施工内容' %>
    <%= f.select :construction_kind_id, ConstructionKind.kind_numbers.keys.map {|k| [I18n.t("enums.construction_kind.kind_number.#{k}"), k]}, { prompt: '選択してください' } %>
  </div>
  <div class="form-group">
    <%= f.submit '次へ' %>
  </div>
<% end %>