<%= render 'site_label', parent: @site_memo.site %>
<%= render 'new_added_index' %>

<div class="container mt-5">
  <%= turbo_frame_tag 'inner-sash-size-form' do %>
    <%= form_with model: @inner_sash, url: inner_sashes_new_append_room_path, data: { turbo_stream: true }, class: 'row justify-content-center' do |inner_sash|%>
      <div class="col-11 col-md-8 col-lg-5 mb-3 mb-md-4">
        <%= inner_sash.label :room, '部屋名', class: 'form-label' %>
        <%= inner_sash.text_field :room, tabindex: "1", class: 'size-form form-control', required: true%>
      </div>
      <%= render 'size_fields', inner_sash: inner_sash %>
      <div class="row justify-content-center p-3 mb-lg-3">
        <%= inner_sash.submit '追加', class: 'btn btn-primary col-9 col-md-4 col-lg-2' %>
      </div>
    <% end %>
  <% end %>
  <div class="row justify-content-center p-3 mb-lg-5 mb-3">
    <%= link_to '次へ', inner_sashes_new_step3_path, class: 'btn btn-secondary col-9 col-md-4 col-lg-2' %>
  </div>
</div>

<%= stylesheet_link_tag "new", "data-turbo-track": "reload" %>