<!-- モバイル用 -->
<section class='d-lg-none' id="mobile">
  <div class="container" style="margin-top: 5vh;">
    <div class="row justify-content-center">
      <div class="row justify-content-end p-3 mb-lg-5 z-3">
        <%= link_to sites_new_path, class: 'btn-circle submit-btn col-3 col-md-4 col-lg-2 p-0 text-center' do %>
          <i class="bi bi-plus plus"></i>
        <% end %>
      </div>
      <div class='index'>
        <%= turbo_frame_tag 'sites-list', class: 'row justify-content-center' do %>
          <%= render @sites %>
          <%= paginate @sites %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- pc用 -->
<section id="pc" class='d-none d-lg-block'>
  <div class="container" style="margin-top: 10vh;">
    <table class='table text-center'>
      <thead class='sticky-top'>
        <tr>
          <th scope="col">元請け</th>
          <th scope="col">現場名</th>
          <th scope="col">現調日</th>
          <th scope="col">工事日</th>
          <th>状態</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= turbo_frame_tag 'sites-list' do %>
          <%= render @sites %>
          <%= paginate @sites %>
        <% end %> 
      </tbody>
    </table>
  </div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="row justify-content-center p-3 submit-btn mb-lg-5">
        <%= link_to '現場追加', sites_new_path, class: 'btn btn-primary col-9 col-md-4 col-lg-2' %>
      </div>
    </div>
  </div>
</section>

<%= stylesheet_link_tag "sites/index", "data-turbo-track": "reload" %>