<div class='col-10 col-sm-5 col-md-4 col-lg-2 d-flex justify-content-center border mx-2 mb-3 room-list'>
  <a class='d-flex align-items-center justify-content-center h-100 w-100' data-bs-toggle="offcanvas" href="#inner-sash-lists" role="button" aria-expanded="false" aria-controls="inner-sash-lists">
    <span><%= inner_sash.room %></span>
  </a>
</div>

<div class="offcanvas offcanvas-end" tabindex="-1" id="inner-sash-lists" aria-labelledby="inner-sash-label">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="inner-sash-label"><%= inner_sash.room %></h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <ul class='data-list list-unstyled'>
      <li class="border-bottom mb-3">
        <p class='m-0 fw-bold'>W寸法</p>
        <ul class="row list-unstyled pt-2">
          <li class="col">上</li>
          <li class="col">中</li>
          <li class="col">下</li>
        </ul>
        <ul class='row list-unstyled pb-2'>
          <li class="col"><%= inner_sash.width_up_size %></li>
          <li class="col"><%= inner_sash.width_middle_size %></li>
          <li class="col"><%= inner_sash.width_down_size %></li>
        </ul>
      </li>
      <li class="border-bottom mb-3">
        <p class='m-0  fw-bold'>H寸法</p>
        <ul class="row list-unstyled pt-2">
          <li class="col">左</li>
          <li class="col">中</li>
          <li class="col">右</li>
        </ul>
        <ul class='row list-unstyled pb-2'>
          <li class="col"><%= inner_sash.height_left_size %></li>
          <li class="col"><%= inner_sash.height_middle_size %></li>
          <li class="col"><%= inner_sash.height_right_size %></li>
        </ul>
      </li>
      <li class="border-bottom mb-3">
        <p class='m-0  fw-bold'>見込み寸法</p>
        <ul class="row list-unstyled pt-2">
          <li class="col">W</li>
          <li class="col">H</li>
        </ul>
        <ul class='row list-unstyled pb-2'>
          <li class="col"><%= inner_sash.width_frame_depth %></li>
          <li class="col"><%= inner_sash.height_frame_depth %></li>
        </ul>
      </li>
      <li class="border-bottom mb-3">
        <p class='m-0  fw-bold'>基本情報</p>
        <ul class="row list-unstyled pt-2">
          <li class="col">タイプ</li>
          <li class="col">色</li>
          <li class="col">障子数</li>
          <li class="col">吊り元</li>
        </ul>
        <ul class='row list-unstyled pb-2'>
          <li class="col"><%= inner_sash.sash_type_i18n %></li>
          <li class="col"><%= inner_sash.color_i18n %></li>
          <li class="col"><%= inner_sash.number_of_shoji %></li>
          <li class="col"><%= inner_sash.hanging_origin_i18n %></li>
        </ul>
      </li>
      <li class="border-bottom mb-3">
        <p class='m-0  fw-bold'>障子</p>
        <ul class="row list-unstyled pt-2">
          <li class="col">クレセント</li>
          <li class="col">中桟</li>
        </ul>
        <ul class='row list-unstyled pb-2'>
          <li class="col"><%= inner_sash.key_height == 0 ? 'なし' : inner_sash.key_height %></li>
          <li class="col"><%= inner_sash.middle_frame_height == 0 ? 'なし' : inner_sash.middle_frame_height %></li>
        </ul>
      </li>
      <li class="border-bottom mb-3">
        <p class='m-0  fw-bold'>ガラス</p>
        <ul class="row list-unstyled pt-2">
          <li class="col">厚み</li>
          <li class="col">種類</li>
          <li class="col">Low-E</li>
          <li class="col">色</li>
        </ul>
        <ul class='row list-unstyled pb-2'>
          <li class="col"><%= inner_sash.glass_thickness_i18n %></li>
          <li class="col"><%= inner_sash.glass_kind_i18n %></li>
          <li class="col"><%= inner_sash.is_low_e ? 'あり' : 'なし' %></li>
          <li class="col"><%= inner_sash.glass_color_i18n %></li>
        </ul>
      </li>
      <li class="border-bottom mb-3">
        <p class='m-0  fw-bold'>付属品</p>
        <ul class="row list-unstyled pt-2">
          <li class="col">平板</li>
          <li class="col">アジャスト<br>上枠</li>
          <li class="col">写真</li>
        </ul>
        <ul class='row list-unstyled pb-2'>
          <li class="col"><%= inner_sash.is_flat_bar ? 'あり' : 'なし' %></li>
          <li class="col"><%= inner_sash.is_adjust ? 'あり' : 'なし' %></li>
          <li class="col"><%= inner_sash.photos.size%>枚</li>
        </ul>
      </li>
      <li class="border-bottom mb-3">
        <p class='m-0  fw-bold'>備考</p>
        <ul class='row list-unstyled py-2'>
          <li class="col"><%= @site_memo.remark.blank? ? 'なし' : @site_memo.remark %></li>
        </ul>
      </li>
    </ul>
  </div>
</div>
