<p>現場情報記入</p>

<%= form_with url: sites_create_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :contractor, '元請'%>
    <!-- ここに元請用フォーム -->
  </div>
  <div class="form-group">
    <%= f.label :name, '現場名' %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address %>
  </div>
  <div class="form-group">
    <%= f.label :research_date, '現調日' %>
    <%= f.date_field :research_date %>
  </div>
  <div class="form-group">
    <%= f.label :construction_date, '工事日' %>
    <%= f.date_field :construction_date %>
  </div>
  <div class="form-group">
    <%= f.submit '現場作成' %>
  </div>
<% end %>